<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/green"
        android:text="Bluetooth"
        android:textSize="20sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btnSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnConnect"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-53dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/design_default_color_secondary_variant"
        android:text="Напр"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSendIdent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSend"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-153dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/design_default_color_secondary_variant"
        android:text="Идент"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSendVin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSendIdent"
        android:layout_margin="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="10dp"
        android:text="VIN" />

    <TextView
        android:id="@+id/receivedDataTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSendVin"
        android:layout_margin="10dp"
        android:layout_marginTop="165dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Полученные данные 1:"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/receivedDataTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/receivedDataTextView"
        android:layout_margin="10dp"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Полученные данные 2:"
        android:textSize="25sp"
        android:textStyle="bold" />


</RelativeLayout>

